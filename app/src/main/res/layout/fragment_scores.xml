<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.fragment_scores">

    <TextView
        android:id="@+id/score_LBL_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GLOBAL SCORES"
        android:textSize="35sp"
        android:textStyle="bold"
        android:fontFamily="@font/chalkduster"
        android:textColor="@color/brownText"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/score_RCV_scores"
        android:layout_width="350dp"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp"
        android:layout_below="@id/score_LBL_header"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:background="@color/scoreTable"/>

</RelativeLayout>