<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".MainActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/main_IMG_logo"
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:drawable="@+id/main_IMG_flag"
        android:scaleType="fitCenter"
        android:src="@drawable/boba_logo" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_BTN_startGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:layout_below="@id/main_IMG_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="@font/chalkduster"
        android:textColor="@color/brownText"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_BTN_globalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Global Scores"
        android:layout_below="@id/main_BTN_startGame"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="@font/chalkduster"
        android:textColor="@color/brownText"/>

</RelativeLayout>