<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".MainActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/main_IMG_logo"
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:drawable="@+id/main_IMG_flag"
        android:scaleType="fitCenter"
        android:src="@drawable/boba_logo" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/main_EDT_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="player name"
        android:background="@color/brownText"
        android:fontFamily="@font/chalkduster"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/main_IMG_logo"/>

    <Switch
        android:id="@+id/main_SWCH_fastMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:layout_below="@id/main_EDT_name"
        android:text="Fast Mode"
        android:fontFamily="@font/chalkduster"
        android:textColor="@color/brownText"
        android:textStyle="bold"
        android:textSize="15sp"
        android:thumbTint="@color/brownText"/>

    <Switch
        android:id="@+id/main_SWCH_sensorMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:layout_below="@id/main_SWCH_fastMode"
        android:text="Sensor Mode"
        android:fontFamily="@font/chalkduster"
        android:textColor="@color/brownText"
        android:textStyle="bold"
        android:textSize="15sp"
        android:thumbTint="@color/brownText"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_BTN_startGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:layout_below="@id/main_SWCH_sensorMode"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textSize="28sp"
        android:layout_marginTop="22dp"
        android:textStyle="bold"
        android:fontFamily="@font/chalkduster"
        android:textColor="@color/brownText"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_BTN_globalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Global Scores"
        android:layout_below="@id/main_BTN_startGame"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="@font/chalkduster"
        android:textColor="@color/brownText"/>

</RelativeLayout>